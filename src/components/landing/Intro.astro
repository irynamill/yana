---
// Fundations
import { Image } from "astro:assets";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import yanaPhoto from "@/images/portrait-confident-young-woman-smiling.jpg";
---

<section>
  <Wrapper variant="standard" class="pb-8 pt-40 lg:pt-80">
    <div class="grid grid-cols-1 lg:grid-cols-4 items-start gap-y-8">

      <Text
        tag="h1"
        variant="displayLG"
        class="font-semibold leading-snug text-left tracking-tighter lg:col-span-2 text-base-900 dark:text-white lg:col-start-3"
      >
        Yana Smolnitchi. Sugaring expert, Munich. Client treatments. Professional training. Services and courses with intent.
      </Text>

      <div class="lg:col-span-2">
        <Image
          src={yanaPhoto}
          alt="Yana Smolnitchi"
          class="size-full aspect-3/2 rounded-4xl object-cover object-center"
          loading="lazy"
          decoding="async"
        />
        <div class="mt-6 flex flex-col gap-3">
          <a
            href="/sugaring"
            class="inline-flex w-full items-center justify-center rounded-4xl border border-base-300 px-5 py-2 text-xs font-semibold uppercase tracking-[2px] text-base-900 transition-colors hover:border-base-900 dark:border-base-700 dark:text-white dark:hover:border-base-300"
          >
            Sugaring
          </a>
          <a
            href="/courses"
            class="inline-flex w-full items-center justify-center rounded-4xl border border-base-300 px-5 py-2 text-xs font-semibold uppercase tracking-[2px] text-base-900 transition-colors hover:border-base-900 dark:border-base-700 dark:text-white dark:hover:border-base-300"
          >
            Courses
          </a>
        </div>
        <div
          class="mt-6 overflow-hidden rounded-4xl bg-white/70 py-3 text-xs uppercase tracking-[3px] text-base-700 dark:bg-base-950/70 dark:text-base-200"
        >
          <div class="flex min-w-full animate-marquee gap-8 whitespace-nowrap px-6">
            <span>
              Sugar Rituals • Skin-Soft Results • Munich Atelier •
              Professional Training •
            </span>
            <span>
              Sugar Rituals • Skin-Soft Results • Munich Atelier •
              Professional Training •
            </span>
          </div>
        </div>
      </div>
    </div>
    
    <!--div class="grid grid-cols-1 lg:grid-cols-4 items-start gap-y-8">
      <Text
        tag="h1"
        variant="displayLG"
        class="font-semibold leading-snug text-left tracking-tighter lg:col-span-2 text-base-900 dark:text-white lg:col-start-3"
      >
        Yana Smolnitchi. Sugaring expert, Munich. Client treatments. Professional training. Services and courses with intent.
      </Text>
    </div-->
  </Wrapper>
</section>
