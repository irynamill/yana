---
// Fundation
import BaseLayout from "@/layouts/BaseLayout.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pb-12 pt-24 lg:pt-80">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-y-8">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-semibold leading-tight text-left tracking-tighter lg:col-span-3 text-base-900 dark:text-white"
        >
          Impressum
        </Text>
      </div>
      <div class="mt-10 grid grid-cols-1 gap-6 lg:grid-cols-2">
        <div class="rounded-2xl border border-base-200 p-6 dark:border-base-800">
          <Text tag="h2" variant="textLG" class="font-semibold text-base-900 dark:text-white">
            Unternehmensangaben
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 text-base-600 dark:text-base-300">
            Iana Smolnitchi
            <br />
            Regerstraße 50
            <br />
            81541 München
            <br />
            Deutschland
          </Text>
        </div>
        <div class="rounded-2xl border border-base-200 p-6 dark:border-base-800">
          <Text tag="h2" variant="textLG" class="font-semibold text-base-900 dark:text-white">
            Kontakt
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 text-base-600 dark:text-base-300">
            Email: mechtatelnica28@gmail.com
          </Text>
        </div>
        <div class="rounded-2xl border border-base-200 p-6 dark:border-base-800">
          <Text tag="h2" variant="textLG" class="font-semibold text-base-900 dark:text-white">
            Tätigkeit
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 text-base-600 dark:text-base-300">
            Sugaring & Waxing (kosmetische Dienstleistungen)
          </Text>
        </div>
        <div class="rounded-2xl border border-base-200 p-6 dark:border-base-800">
          <Text tag="h2" variant="textLG" class="font-semibold text-base-900 dark:text-white">
            Gewerbe-Nr.
          </Text>
          <Text tag="p" variant="textSM" class="mt-2 text-base-600 dark:text-base-300">
            146/198/91229
          </Text>
        </div>
        <div class="rounded-2xl border border-base-200 p-6 dark:border-base-800">
          <Text tag="p" variant="textSM" class="mt-2 text-base-600 dark:text-base-300">
            Gemäß § 5 TMG
          </Text>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
